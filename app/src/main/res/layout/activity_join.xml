<?xml version="1.0" encoding="utf-8"?>
<!-- 회원가입 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/join_titlename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="회원가입"
        android:textAlignment="center"
        android:textColor="#FFE27A"
        android:textSize="45dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/join_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/imageicon" />

    <Button
        android:id="@+id/join_imageBtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="사진 선택"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:backgroundTint="#FBE79F"/>

    <EditText
        android:id="@+id/join_id"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"
        android:hint="아이디(이메일 형식)" />

    <EditText
        android:id="@+id/join_password"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="비밀번호"
        android:inputType="numberPassword" />

    <EditText
        android:id="@+id/join_passwordConfirm"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="비밀번호 확인"
        android:inputType="numberPassword" />

    <EditText
        android:id="@+id/join_name"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:hint="이름" />

    <EditText
        android:id="@+id/join_phone"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:hint="전화번호"
        android:inputType="phone" />

    <Button
        android:id="@+id/join_joinButton"
        android:layout_width="272dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FBE79F"
        android:onClick="onClick"
        android:text="가입하기"
        android:textSize="24sp" />

</LinearLayout>