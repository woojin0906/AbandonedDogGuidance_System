<?xml version="1.0" encoding="utf-8"?>
<!-- 나의 글 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myWriter_titlename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="나의 글 모음"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/myWriter_btn_missing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FAF8E9"
                android:drawableTop="@drawable/mypage_dog"
                android:onClick="onClick"
                android:text="실종 동물 등록"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/myWriter_btn_volunteer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FAF8E9"
                android:drawableTop="@drawable/mypage_volunteer"
                android:onClick="onClick"
                android:text="자원 봉사"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/myWriter_btn_pet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FAF8E9"
                android:drawableTop="@drawable/mypage_sponsor"
                android:onClick="onClick"
                android:text="후원 요청"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>
</LinearLayout>