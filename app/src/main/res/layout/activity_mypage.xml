<?xml version="1.0" encoding="utf-8"?>
<!-- 마이페이지 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_titlename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="회원정보"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mypage_imageView"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:src="@drawable/imageicon" />
                <TextView
                    android:id="@+id/mypage_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="25dp"
                    android:inputType="text"
                    android:text="사용자"/>

                <TextView
                    android:id="@+id/mypage_info"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:background="@drawable/mypageback"
                    android:text="내 정보 관리                                     >" />

                <TextView
                    android:id="@+id/mypage_writer"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:background="@drawable/mypageback"
                    android:text="나의 글 보기                                    >" />

                <TextView
                    android:id="@+id/mypage_company"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:background="@drawable/mypageback"
                    android:text="고객센터                                           >" />

                <TextView
                    android:id="@+id/mypage_logout"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:background="@drawable/mypageback"
                    android:text="로그아웃                                          >" />

                <TextView
                    android:id="@+id/mypage_exit"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:background="@drawable/mypageback"
                    android:text="탈퇴하기                                           >" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>