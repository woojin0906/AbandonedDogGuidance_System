<?xml version="1.0" encoding="utf-8"?>
<!-- 회원정보변경 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_titlename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="회원정보변경"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="※ 아이디(이메일)과 휴대폰 번호를 변경하시려는 사용자는 \n 고객센터로 문의바랍니다."
                android:textColor="#FF5252"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/info_imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:src="@drawable/imageicon" />

            <Button
                android:id="@+id/info_imageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미지 선택"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:minHeight="0dp"
                android:minWidth="0dp" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="아이디(이메일)"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

            <TextView
                android:id="@+id/info_email"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/infoback"
                android:backgroundTint="#E6E6E6"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:text="이메일"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="이름"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/info_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="이름"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textSize="15dp"
                android:inputType="textPersonName"
                android:background="@drawable/infoback"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/info_pw"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textSize="15dp"
                android:inputType="numberPassword"
                android:background="@drawable/infoback"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="비밀번호확인"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/info_pwch"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textSize="15dp"
                android:inputType="numberPassword"
                android:background="@drawable/infoback"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="휴대폰 번호"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/info_phone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:inputType="phone"
                android:backgroundTint="#E6E6E6"
                android:background="@drawable/infoback"/>

            <Button
                android:id="@+id/info_changeBtn"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:text="수정하기"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>