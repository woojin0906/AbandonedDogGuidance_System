<?xml version="1.0" encoding="utf-8"?>
<!-- 메인 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/main_titlename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="도와주개!"
                android:textAlignment="center"
                android:textColor="#FBE79F"
                android:textSize="55dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_marginTop="10dp" >
                <Button
                    android:id="@+id/main_mypage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마이페이지"
                    android:background="#00ff0000"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#000000"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:includeFontPadding="false"
                    android:textSize="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/main_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="로그아웃"
                        android:background="#00ff0000"
                        android:backgroundTint="#FFFFFF"
                        android:textColor="#000000"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:includeFontPadding="false"
                        android:textSize="16dp" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="커뮤니티"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소통하러 가기"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <TextView
                android:id="@+id/main_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/righticon"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="180dp"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left"
            android:layout_marginTop="5dp" >
                <Button
                    android:id="@+id/main_btn_missing"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFBF1"
                    android:drawableTop="@drawable/dog"
                    android:onClick="onClick"
                    android:text="실종 동물 등록"
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    android:textStyle="bold" />

            <Button
                android:id="@+id/main_btn_pet"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFBF1"
                android:drawableTop="@drawable/sponsor"
                android:onClick="onClick"
                android:text="후원 요청"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:layout_marginTop="20dp" >
                <Button
                    android:id="@+id/main_btn_volunteer"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFBF1"
                    android:drawableTop="@drawable/volunteer"
                    android:onClick="onClick"
                    android:text="자원 봉사"
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/main_btn_search"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFBF1"
                    android:drawableTop="@drawable/search"
                    android:onClick="onClick"
                    android:text="유기견 보호센터"
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>