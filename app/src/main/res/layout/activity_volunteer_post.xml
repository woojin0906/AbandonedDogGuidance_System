<?xml version="1.0" encoding="utf-8"?>
<!-- 자원봉사 글 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/volunteer_post_mainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="아이들을 도와주세요!"
                android:textSize="35dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:text="도와주개에서 보고 연락드립니다. 라고 문의해주세요"
                android:background="#FFD94F"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/volunteer_post_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/dog" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:textColor="#FBD033"
                    android:text="글제목 :"/>

                <TextView
                    android:id="@+id/volunteer_post_title"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:text="제목입니다." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:textColor="#FBD033"
                    android:text="단체명 :"/>

                <TextView
                    android:id="@+id/volunteer_post_company"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:text="단체명" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:textColor="#FBD033"
                    android:text="담당자 :"/>

                <TextView
                    android:id="@+id/volunteer_post_mainName"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:text="이름" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:textColor="#FBD033"
                    android:text="연락처 :"/>

                <TextView
                    android:id="@+id/volunteer_post_phone"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="전화번호"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:textColor="#FBD033"
                    android:text="홈페이지 :"/>

                <TextView
                    android:id="@+id/volunteer_post_httpAddr"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:text="주소" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:textColor="#FBD033"
                    android:text="등록인 :"/>

                <TextView
                    android:id="@+id/volunteer_post_name"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textSize="17dp"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:textColor="#FBD033"
                    android:text="모집기간 :"/>

                <TextView
                    android:id="@+id/volunteer_post_date"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="상시모집"
                    android:textSize="17dp"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:textColor="#FBD033"
                    android:text="봉사활동기간 :"/>

                <TextView
                    android:id="@+id/volunteer_post_vdate"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:text="기간" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:textColor="#FBD033"
                    android:text="주소 :"/>

                <TextView
                    android:id="@+id/volunteer_post_place"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:text="주소" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:textColor="#FBD033"
                    android:text="내용 :"/>

                <TextView
                    android:id="@+id/volunteer_post_context"
                    android:padding="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:lines="5"
                    android:text="상세설명"
                    android:textSize="17dp"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mypageback"
                android:padding="10dp"
                android:text="※ 자원봉사를 참가, 신청하기 전에 직접 기관, 단체 및 시설에 대해 자세히 알아보세요. \n ※ 자원봉사모집 글은 기관, 단체 및 시설에서 올린 것이며, 도와주개!는 게시장소만 제공해주므로 글에 대한 책임이 없습니다."
                android:textSize="14dp" />
            <Button
                android:id="@+id/btnComment"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="댓글보기"
                android:backgroundTint="#FBE79F"
                android:layout_gravity="center"/>
            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>