<?xml version="1.0" encoding="utf-8"?>
<!-- 자원봉사 글 화면 리사이클러뷰 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/grayback"
        android:padding="5dp"
        android:layout_margin="1dp">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:src="@drawable/dog" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="글제목 : "
                        android:textSize="15dp"
                        android:padding="1dp" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="제목입니다."
                        android:textSize="15dp"
                        android:singleLine="true"
                        android:padding="1dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:id="@+id/content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="내용 : "
                        android:textSize="15dp"
                        android:padding="1dp" />

                    <TextView
                        android:id="@+id/tv_context"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="내용입니다."
                        android:textSize="15dp"
                        android:singleLine="true"
                        android:padding="1dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="단체명 : "
                            android:textSize="15dp"
                            android:padding="1dp" />

                        <TextView
                            android:id="@+id/tv_company"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="이름"
                            android:textStyle="bold"
                            android:textColor="#FF9800"
                            android:textSize="15dp"
                            android:singleLine="true"
                            android:padding="1dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="모집기간 : "
                            android:textSize="15dp"
                            android:padding="1dp" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="기간"
                            android:textSize="15dp"
                            android:textColor="#FFC107"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:padding="1dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="장소 : "
                            android:textSize="15dp"
                            android:padding="1dp" />

                        <TextView
                            android:id="@+id/tv_place"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="위치"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="#3F51B5"
                            android:singleLine="true"
                            android:padding="1dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/volunteer_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="봉사기간 : "
                            android:textSize="15dp"
                            android:padding="1dp" />

                        <TextView
                            android:id="@+id/tv_volunteer_date"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="기간"
                            android:textSize="15dp"
                            android:textColor="#FFC107"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:padding="1dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>