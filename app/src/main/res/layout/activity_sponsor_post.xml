<?xml version="1.0" encoding="utf-8"?>
<!-- 후원요청 글 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sponsor_post_titlename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="아이들에게 도움을 주세요!"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:text="도와주개에서 보고 연락드립니다. 라고 문의해주세요"
                android:background="#FFD94F"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/sponsor_post_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/dog" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="글제목 :"
                    android:textColor="#FBD033"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/sponsor_post_title"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:text="제목입니다."
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:text="단체명 :"
                    android:textColor="#FBD033"/>

                <TextView
                    android:id="@+id/sponsor_post_company"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:text="담당자 :"
                    android:textColor="#FBD033"/>

                <TextView
                    android:id="@+id/sponsor_post_mName"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:text="이름" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:text="연락처 :"
                    android:textColor="#FBD033"/>

                <TextView
                    android:id="@+id/sponsor_post_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:text="전화번호"
                    android:textColor="#FF0000"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:text="주소 :"
                    android:textColor="#FBD033"/>

                <TextView
                    android:id="@+id/sponsor_post_place"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:text="주소" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:text="홈페이지 :"
                    android:textColor="#FBD033"/>

                <TextView
                    android:id="@+id/sponsor_post_hAddr"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:text="주소" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:text="등록인 :"
                    android:textColor="#FBD033"/>

                <TextView
                    android:id="@+id/sponsor_post_name"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:text="이름" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:text="내용 :"
                    android:textColor="#FBD033"/>

                <TextView
                    android:id="@+id/sponsor_post_context"
                    android:padding="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:lines="5"
                    android:textColor="@color/black"
                    android:text="상세설명"
                    android:textSize="17dp"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mypageback"
                android:padding="10dp"
                android:text="※ 후원을 하기 전에 직접 기관, 단체 및 시설에 대해 자세히 알아보세요. \n ※ 후원요청 글은 기관, 단체 및 시설에서 올린 것이며, 도와주개!는 게시장소만 제공해주므로 글에 대한 책임이 없습니다."
                android:textSize="14dp" />
            <Button
                android:id="@+id/btnComment"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="댓글보기"
                android:backgroundTint="#FBE79F"
                android:layout_gravity="center"/>
            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>